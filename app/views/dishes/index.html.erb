
  <style>
    /* General styling */
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f8f9fa;
    }

    /* Navbar styling */
    .navbar {
      background-color: #343a40;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
    }

    .navbar a {
      color: white;
      text-decoration: none;
      margin: 0 15px;
      font-size: 16px;
    }

    .navbar .dropdown {
      position: relative;
      display: inline-block;
    }

    .navbar .dropdown-content {
      display: none;
      position: absolute;
      background-color: #f9f9f9;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
      z-index: 1;
    }

    .navbar .dropdown-content a {
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
    }

    .navbar .dropdown:hover .dropdown-content {
      display: block;
    }

    /* Main container */
    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      padding: 20px;
    }

    /* Dish container */
    .dish-container {
      width: calc(33.33% - 20px);
      padding: 20px;
      text-align: center;
      background: white;
      border: 1px solid #ddd;
      border-radius: 8px;
      margin: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s;
    }

    .dish-container:hover {
      transform: translateY(-5px);
    }

    /* Dish image styling */
    .dish-image {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin-bottom: 15px;
    }

    /* Dish details styling */
    .dish-details {
      padding: 10px;
    }

    /* Back button styling */
    .back-button {
      text-align: left;
      margin: 20px;
    }

    .btn-back {
      background-color: #343a40;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      /*cursor: pointer;*/
      text-decoration: none;
      font-size: 16px;
    }

    .btn-back:hover {
      background-color: #1d2124;
    }

    /* Responsive adjustments */
    @media (max-width: 1200px) {
      .dish-container {
        width: calc(25% - 20px);
         background-color: lightblue;
      }
    }

    @media (max-width: 992px) {
      .dish-container {
        width: calc(33.33% - 20px);
         background-color: lightblue;
      }
    }

    @media (max-width: 768px) {
      .dish-container {
        width: calc(50% - 20px);
         background-color: lightblue;

      }
    }

    @media (max-width: 576px) {
      .dish-container {
        width: calc(100% - 20px);
         background-color: lightblue;

      }
    }
  </style>
<body>

<!-- Navigation Bar -->
<div class="navbar">
  <a href="<%= new_restaurant_path %>">Create Restaurants</a>
  <a href="<%= new_category_path %>">Create Category</a>
  <a href="dishes">Dish List</a>
  <a href="categories">Category List</a>
  <!-- Add more links as needed -->
  <div class="dropdown">
    <button class="dropbtn">User Profile & Sign Out</button>
    <div class="dropdown-content">
      <a href="<%= current_user_profile_path %>">User Profile</a>
      <% if user_signed_in? %>
        <a href="<%= destroy_user_session_path %>" class="signout-button">Sign Out</a>
      <% end %>
    </div>
  </div>
  <!-- Hamburger menu icon -->
  <div class="menu-button" onclick="toggleMenu()">&#9776;</div>
</div>

<!-- Back Button at the Top -->
<div class="back-button">
  <%= link_to "Back", restaurants_path, class: 'btn btn-back' %>
</div>


<div class="container">
  <% @dishes.each do |d| %>
    <div class="dish-container">
      <div class="dish-image">
        <a href="<%= dish_path(d) %>">
          <%= image_tag(d.picture, size: "200x160") if d.picture.attached? %>
        </a>
      </div>
      <div class="dish-details">
        <h2>
          <a href="<%= dish_path(d) %>">
            <%= d.name %>
          </a>
        </h2>
        <%# <p>Dish_id: <%= d.id %></p>
        <p>Price: <%= d.price %></p>
        <p>Category: <%= Category.find_by_id(d.category_id).name %></p>
        <%# <p>Other Details: <!-- Add other details here --></p> %>
        <!-- <p><%= link_to "Show", dish_path(d), class: "button" %></p> -->
      </div>
    </div>
  <% end %>
</div>

</body>
