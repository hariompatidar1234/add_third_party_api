
<h1>Category Type</h1>
<div class="category-container">
  <div class="container">
    <table id="categories-table" class="display" style="width:100%">
     <thead>
       <tr>
         <th>Id</th>
         <th>Category name</th>
         <th>Show</th>
       </tr>
     </thead>

      <tbody>
        <% @categories.each do |r| %>
          <tr>
            <td><%= r.id %></td>
            <td><%= r.name %></td>
            <td><%= link_to "show", category_path(r), class: 'btn btn-primary'%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to "Back", restaurants_path %>

