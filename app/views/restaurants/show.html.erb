
<style>
  body {
    font-family: 'Poppins', sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
  }

  .container {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    background-color: #fff;
    padding: 25px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  h1 {
    font-size: 24px;
    color: #007bff;
    margin-bottom: 20px;
  }

  p {
    font-size: 18px;
    margin-bottom: 10px;
  }

  .btn-primary,
  .btn-danger,
  .back-btn {
    display: inline-block;
    text-decoration: none;
    margin: 5px;
    padding: 12px 24px;
    border-radius: 5px;
    font-size: 16px;
    transition: background-color 0.3s;
  }

  .btn-primary {
    border: 2px solid #007bff;
    background-color: #007bff;
    color: #fff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-danger {
    border: 2px solid #d9534f;
    background-color: #d9534f;
    color: #fff;
  }

  .btn-danger:hover {
    background-color: #c9302c;
  }

  .back-btn {
    border: 2px solid #007bff;
    color: #007bff;
  }

  .back-btn:hover {
    background-color: #0056b3;
  }

  .image-container {
    text-align: center;
    margin-bottom: 20px;
  }

  img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .user-actions {
    margin-top: 20px;
  }
</style>
<body>

<div class="container">
  <% if flash.any? %>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
  <% end %>

  <h1>Restaurant Details</h1>

  <div class="image-container">
    <%= image_tag(@restaurant.picture, size: "250x250", alt: "Restaurant Image") if @restaurant.picture.attached? %>
  </div>

  <p><strong>Restaurant ID:</strong> <%= @restaurant.id %></p>
  <p><strong>Restaurant Name:</strong> <%= @restaurant.name %></p>
  <p><strong>Status:</strong> <%= @restaurant.status %></p>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Owner:</strong> <%= User.find_by_id(@restaurant.owner.id).name %></p>

  <h1>Dish Details</h1>
  <div class="dish-container">
    <% if @dishes.any? %>
      <% @dishes.each do |dish| %>
        <div class="dish-details">
          <div>
            <p><strong>Dish Name:</strong> <%= dish.name %></p>
            <p><strong>Price:</strong> <%= dish.price %></p>
            <p><strong>Category:</strong> <%= Category.find_by_id(dish.category_id).name %></p>
            <br>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>dish not found</p>
    <% end %>
  </div>
  <%= link_to "Back", restaurants_path, class: 'back-btn' %>

  <div class="user-actions">
    <% if user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path, class: 'btn btn-primary' %> <br />
    <% end %>

    <% if user_signed_in? && current_user.type== 'Owner' && @restaurant.owner == current_user  %>
      <%= link_to "Edit Restaurant", edit_restaurant_path(@restaurant), class: 'btn btn-primary' %>
      <%= link_to "Add Dish", new_dish_path, class: 'btn btn-primary' %>
      <%= link_to "Delete Restaurant", restaurant_path(@restaurant), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          }, class: 'btn btn-danger'  %>
    <% end %>
  </div>
</div>

</body>
